<% provide(:title, '批改作业') %>
<div class="row">
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading">批改作业</div>
      <div class="panel-body">
        <%= form_for @stuhomework, url: check_complete_stuhomework_path do |f| %>
          <%= render "shared/error_messages", object: f.object %>
          <div class="form-group">
            <%= f.text_field :mark, class: "form-control", placeholder: "在这里填写分数" %>
          </div>
          <div class="form-group">
            <%= f.text_area :remark, class: "form-control", rows: 10, placeholder: "在这里填写评语" %>
          </div>
          <div class="form-group">
            <%= f.submit "完成批改", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <%= render 'panel/user_info' %>
  </div>
</div>
