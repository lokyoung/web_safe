<% provide(:title, '修改作业') %>
<div class="row">
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading">修改作业</div>
      <div class="panel-body">
        <%= form_for ([@homework, @stuhomework]) do |f| %>
          <%= render "shared/error_messages", object: f.object %>
          <div class="form-group">
            <%= f.label :stuhomeworkfile, '作业文件' %>
            <%= f.file_field :stuhomeworkfile, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.submit "完成修改", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <%= render 'panel/user_info' %>
  </div>
</div>
