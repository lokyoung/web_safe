<% provide(:title, '修改话题') %>
<div class="row">
  <div class="col-md-9">
<%= form_for @topic do |f| %>
<%= render "shared/error_messages", object: f.object %>
<div class="form-group">
  <%= f.text_field :title, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.text_area :content, class: "form-control", id: "sim-editor", rows: 10 %>
</div>
<div class="form-group">
  <%= f.submit "修改话题", class: "btn btn-primary" %>
</div>
<% end %>
</div>
<div class="col-md-3">
  <%= render 'panel/user_info' %>
</div>
</div>
<%= render 'layouts/simditor' %>
