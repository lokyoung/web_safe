<%= form_for @topic do |f| %>
<%= render "shared/error_messages", object: f.object %>
<div class="form-group">
  <%= f.text_field :title, class: "form-control", placeholder: "在这里填写标题" %>
</div>
<div class="form-group">
  <%= f.text_area :content, class: "form-control", rows: 20, placeholder: "在这里填写内容" %>
</div>
<div class="form-group">
  <%= f.submit "发表话题", class: "btn btn-primary" %>
</div>
<% end %>
