<%= provide(:title, '发布公告') %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">
      <div class="panel-heading">
        新建公告
      </div>
      <div class="panel-body">
        <%= form_for(@announce) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <%= f.label :title, '标题' %>
        <%= f.text_field :title, placeholder: "输入标题", class: "form-control" %>
        <%= f.label :content, '公告内容' %>
        <%= f.text_area :content, class: "form-control", placeholder: '说点什么...', id: "sim-editor" %>
        <%= f.submit "发布", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<%= render 'layouts/simditor' %>
