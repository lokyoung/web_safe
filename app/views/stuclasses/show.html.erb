<% provide(:title, '班级学生列表') %>
<div class="row">
<div class="col-md-9">
<div class="panel panel-default">
  <div class="panel-heading">
    <%= @stuclass.scname %>
  </div>
  <table class="table table-striped">
    <tr>
      <td>用户名</td>
      <td>学号</td>
      <td>Email</td>
    </tr>
    <% @stuclass.students.each do |student| %>
    <tr>
      <td><%= link_to student.name, user_path(student) %></td>
      <td><%= student.sid %></td>
      <td><%= student.email %></td>
    </tr>
    <% end %>
  </table>
</div>
</div>
<div class="col-md-3">
  <%= render 'panel/user_info' %>
</div>
</div>
