<% provide(:title, '修改实验信息') %>
<%= form_for(@experiment, html: { multipart: true }) do |f| %>
<%= render "shared/error_messages", object: @experiment %>
<div class="form-group">
  <%= f.text_field :title, class: "form-control", placeholder: "在这里填写标题" %>
</div>
<div class="form-group">
  <%= f.text_area :description, class: "form-control", id: "sim-editor", rows: 20, placeholder: "在这里填写课件描述" %>
</div>
<div class="form-group">
    <%= f.file_field :experimentfile, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.submit "修改实验", class: "btn btn-primary" %>
</div>
<% end %>
<%= render 'layouts/simditor' %>
