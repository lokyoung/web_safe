<%= form_for(@experiment, html: { multipart: true }) do |f| %>
<%= render "shared/error_messages", object: @experiment %>
<div class="form-group">
  <%= f.text_field :title, class: "form-control", placeholder: "在这里填写标题" %>
</div>
<div class="form-group">
  <%= f.text_area :description, class: "form-control", rows: 20, placeholder: "在这里填写作业描述" %>
</div>
<div class="form-group">
  <%= f.file_field :experimentfile, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.collection_check_boxes :stuclass_ids, Stuclass.all, :id, :name_with_initial %>
</div>
<div class="form-group">
  <%= f.submit "新增实验", class: "btn btn-primary" %>
</div>
<% end %>
