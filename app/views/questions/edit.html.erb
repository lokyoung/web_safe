<% provide(:title, '修改问题') %>
<div class="row">
  <div class="col-md-9">
<%= form_for @question do |f| %>
<%= render "shared/error_messages", object: f.object %>
<div class="form-group">
  <%= f.text_field :title, class: "form-control", placeholder: "在这里填写标题" %>
</div>
<div class="form-group">
  <%= f.text_area :content, class: "form-control", rows: 10, placeholder: "在这里填写问题内容" %>
</div>
<div class="form-group">
  <%= f.label :issolved, "问题是否解决" %>
  <label class="radio-inline">
    <input type="radio" name="question[issolved]" value="true"> 是
  </label>
  <label class="radio-inline">
    <input type="radio" name="question[issolved]" value="false"> 否
  </label>
</div>
<div class="form-group">
  <%= f.submit "修改问题", class: "btn btn-primary" %>
</div>
<% end %>
</div>
<div class="col-md-3">
  <%= render 'panel/user_info' %>
</div>
</div>
