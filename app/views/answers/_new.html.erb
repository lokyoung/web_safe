<div class="panel panel-default">
  <div class="panel-heading">
    发表答案
  </div>
  <div class="panel-body">
    <%= form_for [@question, @answer = Answer.new] do |f| %>
    <%= render "shared/error_messages", object: @answer %>
    <div class="form-group ui-widget">
      <div>
        <%= f.text_area :content, rows: 5, placeholder: '说点什么...', class: 'form-control', id: "tags", 'question-id': @question.id.to_s %>
      </div>
    </div>

    <div class="form-group">
      <div>
        <%= f.submit "发表答案", class: "button button-primary button-rounded", id: "submit"%>
      </div>
    </div>

    <% end %>
  </div>
</div>
