<div class="panel panel-default">
  <div class="panel-heading">
    <%= "共 #{@question.answers.count} 条答案" %>
  </div>
  <% @question.answers.each do |answer| %>
    <ul class="list-group">
      <li class="list-group-item">
      <div class="media media-middle">
        <div class="avatar">
          <%= user_avatar answer.user %>
        </div>
        <div class="infos">
          <span style= "float: right">
            <%= render 'panel/edit_delete', item: answer %>
          </span>
          <%= link_to answer.user.name, answer.user %>
          <small><%= time_ago_in_words answer.created_at %> ago</small>
          <p><%= answer.content %></p>
          <div class="post-comment">
            <%= render 'comments/show_to_answer', answer: answer %>
          </div>
        </div>
      </div>
      </li>
    </ul>
  <% end %>
</div>
<%= render 'answers/new' %>
