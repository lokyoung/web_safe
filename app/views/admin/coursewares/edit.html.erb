<div class="panel panel-default">
  <div class="panel-heading">
    课件修改
  </div>
  <div class="panel-body">
    <%= form_for [:admin, @courseware] do |f| %> 
      <%= f.label :title, '标题' %>
      <%= f.text_field :title, class: 'form-control' %>
      <%= f.label :decription, '描述' %>
      <%= f.text_area :description, class: 'form-control' %>
      <%= f.label :coursefile, '文件' %>
      <%= f.file_field :coursefile, class: 'form-control' %>
      <label>发布者</label>
      <input class="form-control" type="text" readonly="value" value="<%= @courseware.user.name %>">
      <%= f.submit '保存修改', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
