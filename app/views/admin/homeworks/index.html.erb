<div class="panel panel-default">
  <div class="panel-heading">作业列表</div>
  <table class="table">
    <tr>
      <td>标题</td>
      <td>描述</td>
      <td>班级</td>
      <td>附件</td>
      <td>发布者</td>
      <td>学生提交的作业</td>
    </tr>
    <% @homeworks.each do |homework| %>
      <tr>
        <td><%= homework.title %></td>
        <td><%= homework.description %></td>
        <td>
          <% homework.stuclasses.each do |stuclass| %>
            <%= stuclass.scname %>
          <% end %>
        </td>
        <td><%= link_to '查看附件', homework.homeworkfile.to_s %></td>
        <td><%= homework.user.name %></td>
        <td><%= link_to '点击查看', admin_homework_stuhomeworks_path(homework) %><td>
        <td><%= render 'admin/panel/edit_delete', obj: homework %></td>
      </tr>
    <% end %>
  </table>
  <%= paginate @homeworks %>
</div>
