<div class="panel panel-default">
  <div class="panel-heading">话题列表</div>
  <table class="table">
    <tr>
      <td>话题标题</td>
      <td>内容</td>
      <td>发布者</td>
      <td>评论</td>
    </tr>
    <% @topics.each do |topic| %>
      <tr>
        <td><%= topic.title %></td>
        <td><%= topic.content %></td>
        <td><%= topic.user.name %></td>
        <td><%= link_to '点击查看', show_comments_admin_topic_path(topic) %></td>
        <td><%= render 'admin/panel/edit_delete', obj: topic %></td>
    </tr>
  <% end %>
  <%= paginate @topics %>
</table>
</div>
